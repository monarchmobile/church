
<ul class="model_table">
	<li>
		<ul class="instance_detail">
			<%= content_tag :li, @category.name, class:"name" %><br />
			<%= content_tag :div, raw(@category.description), class: "view_all" %>
			<ul class="crud_buttons">

				<%= content_tag :li, link_to("edit", edit_category_path(@category)), class:"edit" %>
				
				<%= content_tag :li, link_to("delete", category_path(@category), :confirm => "are you sure?", :method => :delete ), class:"delete" %>
			</ul>
		</ul>
		<br class="clear">
	</li>
	<br />

	<%= content_tag :li, link_to('View All categories', categories_path) %>
</ul>


