<%= form_for @category do |f| %> 
	<%= render 'shared/errors', object: @category %> 
	<div class="field">
		<%= f.label :name %>
		<%= f.text_field :name %>
	</div>

	<div class="field">
	    <%= f.label :scripture_ids, "Check the scriptures that go with this category" %><br />
	    <%= hidden_field_tag "category[scripture_ids][]", nil %>
    	<% @scriptures.each do |script| %>
	      <%= check_box_tag "category[scripture_ids][]", script.id, @category.scripture_ids.include?(script.id), id: dom_id(script) %>  
      	<%= label_tag dom_id(script), "#{script.title} #{script.content}", class: "check_box_label" %><br> 
	    <% end %>
		    
	</div>
	
	<div class="actions">
		<%= f.submit %>
	</div>


<% end %>