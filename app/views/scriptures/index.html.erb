
	<h1>Scriptures</h1> 
	<div class="column_title pages">
		<%= content_tag :p, link_to("+ New", new_scripture_path), class: "new_instance_button" %>
		<ul>
			<li class="title">Name</li>
		</ul>
		
	</div>

	<ul class="model_table">
		<% @scriptures.each do |scripture| %>
			<li>
				<ul class="instance_detail">
					<%= content_tag :li, scripture.title, class:"name" %>
					<%= content_tag :li, scripture.content, class:"name" %>
					
					<%= render "shared/crud_btns_without_view", object: scripture %>
				</ul>
				<br class="clear">
			</li>
		<% end %>
	</ul>