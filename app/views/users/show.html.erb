	
		<% if @user.approved %>
			<% if @user.fullname.blank? %>
				<%= content_tag :h2, "please update your profile with your first name and last name" %>
				<%= content_tag :h2, link_to("edit profile", user_path(@user)) %>
				<%= content_tag :h2, @user.email %>
			<% else %>
				<%= content_tag :h2, @user.fullname %>
			<% end %>
			
			<ul class="model_table">
				<% @categories.sort.each do |category, recent_prayers| %>
					<% @category = Category.find(category.to_i) %>
					<%= content_tag :h2, @category.name %>

					<% scripts = @category.scripture_ids %>
					<% @scripture = Scripture.where("id IN(?)", scripts).order("RANDOM()").first %>
					<%= @scripture.content if @scripture %>
			
					
			    <%= render recent_prayers %>
			  <% end %>
			</ul>

			<ul class="model_table">
				<%= content_tag :h3, "last week" %>
			  <%= render @prayers_with_week_duration %>
			</ul>
			
			<ul class="model_table">
				<%= content_tag :h3, "within the month" %>
		    <%= render @prayers_with_month_duration %>
			</ul>
		<% elsif !current_user.approved %>

			<%= content_tag :p, "Thank you for signing up as an interescessor" %>
		<% end %>

<%= render 'shared/sidebar' %>
<%= render 'announcements/last_announcement' %>
	



