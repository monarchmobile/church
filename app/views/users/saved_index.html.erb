<!-- Admin/Superadmin page -->
<% if (current_user.role_ids & [role_id(:Admin), role_id(:SuperAdmin)]).count > 0 %>
	<!-- intercessors waiting -->
	<ul class="model_table userStatus" id="admin_list_ints_waiting" data-update-url="<%= sort_users_url %>">
		<%= content_tag :h3, "Intercessors(#{@admin_list_ints_waiting.count})" %>
		<%= render @admin_list_ints_waiting.query %>
	</ul>
	<!-- coordinators waiting -->
	<ul class="model_table userStatus" id="admin_list_coords_waiting" data-update-url="<%= sort_users_url %>">
		<%= content_tag :h3, "Coordinators(#{@admin_list_coords_waiting.count})" %>
		<%= render @admin_list_coords_waiting %>
	</ul>
	<!-- admins waiting -->
	<ul class="model_table userStatus" id="admin_list_admins_waiting" data-update-url="<%= sort_users_url %>">
		<%= content_tag :h3, "Admins (#{@admin_list_admins_waiting.count})" %>
		<%= render @admin_list_admins_waiting %>
	</ul>

<!-- coordinator page -->
<% elsif current_user.role? :Coordinator %>
	<!-- coordintators church: intercessors waiting -->
	<ul class="model_table userStatus" id="coor_list_ints_waiting" data-update-url="<%= sort_users_url %>">
		<%= content_tag :h3, "Intercessors(#{@coor_list_ints_waiting.count})" %>
		<%= render @coor_list_ints_waiting %>
	</ul>

<!-- intercessor page -->
<% elsif current_user.role? :Intercessor %>
	intercessor sees nothing 
<% end %>


