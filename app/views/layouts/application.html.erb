<!DOCTYPE html>
<html>
<head>
  <%= content_tag :title, "#{Rails.application.class.to_s.split("::").first}" %>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>          
  <% if "#{params[:controller]}##{params[:action]}" == "piggybak/orders#submit" -%>
      <%= javascript_include_tag "piggybak/piggybak-application" %>
  <% end -%>

  <%= csrf_meta_tags %>
</head>
<body>
  
  <%= render "shared/header" %>
  <%= render "shared/announcements" %>
    <div class="container main">
     


      <div class="error">
        <% flash.each do |name, msg| %>
          <%= content_tag :p, msg, id: "flash_#{name}" %>
        <% end %>
      </div>
      <div class="header">
        <div class="col1">
          <div class="logo">
            <%= image_tag "web-logo.png" %>
          </div>
        </div>
        <div class="col2 slideshow">
            <%= image_tag "slideshow-prayer.jpg" %>
        </div>
        <div class="band"></div>
      </div>
      <br class="clear" />
     
      <div class="second_tier">
        <div class="col1">

        </div>
        <div class="col2">
            <%= yield %>
        </div>
      </div>


      <br class="clear"/>

    <br class="clear"/>
    </div>
    
  <%= render "shared/footer" %>

</body>
</html>
